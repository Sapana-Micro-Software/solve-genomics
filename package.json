{
  "name": "solve-genomics",
  "version": "1.0.0",
  "description": "Comprehensive DNA Sequence Alignment and Pattern Matching Algorithms",
  "scripts": {
    "build": "npm run build:ts && npm run build:css && npm run build:jekyll",
    "build:ts": "tsc",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --minify",
    "build:jekyll": "bundle exec jekyll build",
    "dev": "npm run watch:ts & npm run watch:css & bundle exec jekyll serve --livereload",
    "watch:ts": "tsc --watch",
    "watch:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --watch",
    "serve": "bundle exec jekyll serve",
    "clean": "rm -rf _site .jekyll-cache node_modules/.cache",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "dna",
    "genomics",
    "sequence-alignment",
    "pattern-matching",
    "bioinformatics"
  ],
  "author": "Shyamal Suhana Chandra",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "d3": "^7.8.5"
  }
}

